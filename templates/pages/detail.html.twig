{% extends "base.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-2">
                <aside>
                    <ul class="nav">
                        {% for item in sulu_navigation_root_tree('main', 2) if item.children | length > 0 %}
                            {% for child in item.children %}
                                <li class="nav-item">
                                    <a href="{{ sulu_content_path(child.url) }}" title="{{ child.title }}">
                                        {{ child.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        {% endfor %}
                    </ul>
                </aside>
            </div>
            <div class="col-10">
                <section>
                    <h2 class="mt-4 mb-4">{{ content.title }}</h2>
                    {{ content.article | raw }}
                </section>
            </div>
        </div>
    </div>
{% endblock %}
